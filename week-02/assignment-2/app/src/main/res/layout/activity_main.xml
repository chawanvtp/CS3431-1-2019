<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btnLightBrown" app:layout_constraintEnd_toStartOf="@+id/btnDepressedGreen"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnWeirdGreen" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@color/LightBrown"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btnDepressedGreen" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnBalticSea" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.428" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="@color/DepressedGreen"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btnSteelPink" app:layout_constraintStart_toEndOf="@+id/btnDepressedGreen"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLightIndigo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:background="@color/SteelPink"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btnLightIndigo" app:layout_constraintStart_toEndOf="@+id/btnBalticSea"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnRadiantYellow"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.444" app:layout_constraintVertical_bias="0.543"
            android:background="@color/LightIndigo"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btnLightPurple" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnSpiroDiscoBall" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" app:layout_constraintVertical_bias="0.666" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnYoungSalmon" android:background="@color/LightPurple"/>
    <TextView
            android:layout_width="147dp"
            android:layout_height="44dp"
            android:text="Color Name"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintVertical_bias="0.462" android:id="@+id/tvColoName"/>
    <TextView
            android:text="Color Hex Code"
            android:layout_width="145dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:id="@+id/tvColorHexCode" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvColoName" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.048"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btnRedOrange" app:layout_constraintStart_toEndOf="@+id/btnYoungSalmon"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.777" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnRadiantYellow" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.714"
            android:background="@color/RedOrange"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btnSpiroDiscoBall"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnDornYellow" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintVertical_bias="0.265" android:background="@color/SpiroDiscoBall"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btnDornYellow"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.501" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.265"
            android:background="@color/DornYellow"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btnRadiantYellow" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/btnDornYellow" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.265" android:background="@color/RadiantYellow"
            app:layout_constraintHorizontal_bias="0.444"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btnYoungSalmon" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnDornYellow" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:background="@color/YoungSalmon"
            app:layout_constraintHorizontal_bias="0.501" app:layout_constraintVertical_bias="0.388"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btnBalticSea" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDornYellow" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.54"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:background="@color/BalticSea"/>
    <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/btnWeirdGreen" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSpiroDiscoBall" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.54"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btnBalticSea"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:background="@color/WeirdGreen"/>

</android.support.constraint.ConstraintLayout>